echo "ğŸ” Running pre-commit tests..."

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Function to print colored output
print_status() {
    echo "${2}${1}${NC}"
}

print_status "âš¡ Step 1/2: Running unit tests..." "$YELLOW"

# Run unit tests first (they're fast)
if npm run test:unit; then
    print_status "âœ… Unit tests passed!" "$GREEN"
else
    print_status "âŒ Unit tests failed! Commit aborted." "$RED"
    print_status "ğŸ’¡ Fix unit test failures before committing." "$YELLOW"
    exit 1
fi

print_status "ğŸ§ª Step 2/2: Running E2E tests..." "$YELLOW"

# Run E2E tests (slower but comprehensive)
if npm run test:e2e; then
    print_status "âœ… E2E tests passed!" "$GREEN"
    print_status "ğŸ‰ All tests passed! Proceeding with commit..." "$GREEN"
else
    print_status "âŒ E2E tests failed! Commit aborted." "$RED"
    print_status "ğŸ’¡ E2E tests may fail in headless environments (no display)." "$YELLOW"
    print_status "ğŸ’¡ Try running tests in an environment with a display server." "$YELLOW"
    exit 1
fi

print_status "âœ¨ Pre-commit validation complete!" "$GREEN"
